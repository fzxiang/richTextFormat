{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2016",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ],
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "rootDir": "."
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.ts",
    "dist",
    "**/*.js"
  ]
}